<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PML2Exa2Grupo3.ListaUbicacion"
             xmlns:local="clr-namespace:PML2Exa2Grupo3.viewmodel" 
             xmlns:Converters="clr-namespace:PML2Exa2Grupo3.Converters">
    <ContentPage.BindingContext>
        <local:ListSitiosVM/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <Converters:ConvertStringToImage x:Key="ConvertStringToImage"/>
    </ContentPage.Resources>
   
    <ContentPage.Content>
        <StackLayout>
            <!--- -->
            <ListView x:Name="ListMisUbicaciones"
                      ItemsSource="{Binding SitiosList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >
                            <Grid>
                                <SwipeView>
                                    <SwipeView.LeftItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Actualizar"
                                               IconImageSource="EditLocations.png"
                                               BackgroundColor="#5E95D5"
                                                 Command="{Binding BindingContext.UpdateCommand, Source={x:Reference Name=ListaUbicacion}}"
                                                 CommandParameter="{Binding .}"
                                               />
                                            <SwipeItem Text="Ver"
                                               IconImageSource="locationsPing.png"
                                               BackgroundColor="#5E95D5"
                                                 Command="{Binding BindingContext.SeeCommand, Source={x:Reference Name=ListaUbicacion}}"
                                                 CommandParameter="{Binding .}"
                                               />
                                            <SwipeItem Text="Borrar"
                                               IconImageSource="Delete.png"
                                               BackgroundColor="#DF5B77"
                                               Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=ListaUbicacion}}"
                                                 CommandParameter="{Binding .}"  
                                                />
                                        </SwipeItems>
                                    </SwipeView.LeftItems>

                                    <StackLayout Orientation="Vertical">
                                        <Label TextColor="Black" Text="{Binding  Id}" IsVisible="true"/>
                                        <Label TextColor="Black" Text="{Binding Descripcion}" IsVisible="true"/>
                                        <Label TextColor="Black" Text="{Binding Latitud}" IsVisible="true"/>
                                        <Label TextColor="Black" Text="{Binding Longitud}" IsVisible="true"/>

                                    </StackLayout>
                                </SwipeView>

                                <Button Grid.Column="1"
                                   Grid.Row="1"
                                        x:Name="btnViewMap"
                                            Text="Ver Mapa" 
                                            Margin="20,10" 
                                            CornerRadius="30"
                                            BackgroundColor="#55C5DA" />

                            </Grid>

                        </ViewCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>